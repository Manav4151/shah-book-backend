{
  "watch": [
    "controllers",
    "models", 
    "routes",
    "middleware",
    "lib",
    "utils",
    "index.js",
    "server.js"
  ],
  "ignore": [
    "logs/**/*",
    "uploads/**/*",
    "public/**/*",
    "node_modules/**/*",
    "extra/**/*",
    "*.log",
    "*.json",
    "*.xlsx",
    "*.xls",
    "*.csv",
    "*.md"
  ],
  "ext": "js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000,
  "verbose": true
}
